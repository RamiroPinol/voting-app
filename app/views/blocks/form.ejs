<div class="container">

<div class="col-sm-6 col-sm-offset-3">

  <h1><span class="fa fa-<%= icon %>"></span> <%= action %></h1>

  <!-- show any messages that come back with authentication -->
  <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
  <% } %>

  <!-- LOGIN FORM -->
  <% if (linkLocal) { %>
    <form action="/connect/local" method="post">
  <% } else { %>
    <form action="/<%= action %>" method="post">
  <% } %>
    <div class="form-group">
      <label>Email</label>
      <input type="text" class="form-control" name="email">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" name="password">
    </div>

    <button type="submit" class="btn btn-warning btn-lg"><%= action %></button>
  </form>

  <hr>

  <% if (!linkLocal) { %>
    <p><%= text %> <a href="/<%= alternative %>"><%= alternative %></a></p>
    <p>Or go <a href="/">home</a>.</p>

  <% } else {%>
    <p><a href="/profile">Go back to profile</a></p>
  <% } %>


</div>

</div>
